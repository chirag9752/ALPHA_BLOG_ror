
<% if @category.errors.any? %>

<h2>The following errors are prevented the <%= @category.class.name.downcase %> from being saved</h2>

<% @category.errors.full_messages.each do |msg| %>

<ul>
    <li> <%= msg %> </li>
</ul>

<%end%>

<%end%>

<%= form_with(model: @category, local: true, data: { turbo: false}) do |f| %>
  <p> 
    <%= f.label :name , "Category name" %>  
    <%= f.text_field :name, placeholder: "Enter a name" %>
  </p>

  <p>
    <%= f.submit  %> 
  </p>
<% end %>